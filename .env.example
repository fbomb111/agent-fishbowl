# =============================================================================
# Application
# =============================================================================
DEBUG=true
ENVIRONMENT=development

# =============================================================================
# CORS (comma-separated origins)
# =============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# =============================================================================
# Azure User-Assigned Managed Identity
# Used for ALL Azure resource communication (blob storage, etc.)
# =============================================================================
MANAGED_IDENTITY_CLIENT_ID=e0e642cd-94c8-435f-9d0e-e23c4edaaaa9

# =============================================================================
# Azure Blob Storage (articles)
# =============================================================================
AZURE_STORAGE_ACCOUNT=agentfishbowlstorage
AZURE_STORAGE_CONTAINER=articles

# =============================================================================
# GitHub (activity feed)
# =============================================================================
GITHUB_REPO=fbomb111/agent-fishbowl
GITHUB_TOKEN=

# =============================================================================
# Frontend
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
